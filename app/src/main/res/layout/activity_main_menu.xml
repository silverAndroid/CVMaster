<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.cvmaster.studio.MainMenuActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quick_fight"
        android:id="@+id/btn_quick_fight"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_player"
        android:id="@+id/btn_invite_player"
        android:layout_below="@+id/btn_quick_fight"
        android:layout_alignLeft="@+id/btn_quick_fight"
        android:layout_alignStart="@+id/btn_quick_fight"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_invitations"
        android:id="@+id/btn_show_invitations"
        android:layout_below="@+id/btn_invite_player"
        android:layout_alignLeft="@+id/btn_invite_player"
        android:layout_alignStart="@+id/btn_invite_player"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/btn_sign_in"
        android:layout_below="@+id/btn_show_invitations"
        android:layout_alignLeft="@+id/btn_show_invitations"
        android:layout_alignStart="@+id/btn_show_invitations"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/btn_sign_out"
        android:layout_alignTop="@+id/btn_sign_in"
        android:layout_alignLeft="@+id/btn_sign_in"
        android:layout_alignStart="@+id/btn_sign_in"
        android:visibility="gone"/>

</RelativeLayout>
